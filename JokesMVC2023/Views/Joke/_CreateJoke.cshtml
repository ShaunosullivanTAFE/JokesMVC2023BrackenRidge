@model JokesMVC2023.Models.Data.Joke


<div class="row">
    <div class="col">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="JokeQuestion" class="control-label"></label>
                <textarea cols="50" rows="4" asp-for="JokeQuestion" class="form-control"></textarea>
                <span asp-validation-for="JokeQuestion" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="JokeAnswer" class="control-label"></label>
                <textarea cols="40" rows="4" asp-for="JokeAnswer" class="form-control"></textarea>
                <span asp-validation-for="JokeAnswer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" id="btnCreate">
                    Create
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
